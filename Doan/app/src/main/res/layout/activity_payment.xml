<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin giao hàng"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Tên"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:background="@drawable/rounded_ed_text"
                android:textColor="@color/black"
                android:id="@+id/edtTenPayment"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_ed_text"
                android:textSize="15sp"
                android:hint="Nhập địa chỉ..."
                android:id="@+id/edtDiaChi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_ed_text"
                android:textSize="15sp"
                android:hint="Nhập số điện thoại..."
                android:id="@+id/edtSDTPayment"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tổng hàng"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Tổng số lượng hàng"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/txtTotalSLPayment"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Tổng tiền"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textColor="#EF410A"
                android:id="@+id/txtTotalMoney"/>
        </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnOrderPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BE845F"
            android:text="Đặt hàng"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textStyle="italic"/>
    </LinearLayout>
</LinearLayout>