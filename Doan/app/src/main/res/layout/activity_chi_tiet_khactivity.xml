<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChiTietKHActivity"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin người dùng"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="Mã khách hàng:"/>
            <TextView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="@drawable/edt_profile"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtMaKHCN"
                android:hint="mã" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="Tên khách hàng:"/>
            <TextView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="@drawable/edt_profile"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="tên"
                android:id="@+id/txtTenKHCN"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:text="Password:"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/edt_profile"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Pass"
            android:id="@+id/txtPassKHCN"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="Email:"/>
            <TextView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="@drawable/edt_profile"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="Mail"
                android:id="@+id/txtEmailKHCN" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="Số điện thoại:" />
            <TextView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="@drawable/edt_profile"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="SDT"
                android:id="@+id/txtPhoneKHCN"/>
        </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:background="#FF42331F"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:id="@+id/btnXoaKH"/>
    </LinearLayout>
</ScrollView>